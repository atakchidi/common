<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autowire="true" autoconfigure="true" public="false" />

        <prototype namespace="Damax\Common\Bridge\Symfony\Bundle\Listener\" resource="../../Listener" />

        <service id="Damax\Common\Domain\DomainEventPublisher">
            <argument type="service" id="simple_bus.event_bus.aggregates_recorded_messages" />
            <argument type="service" id="event_bus" />
        </service>

    </services>
</container>
