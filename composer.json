{
  "name": "damax/common",
  "type": "library",
  "description": "Utilities and helpers for building DDD apps and APIs.",
  "license": "MIT",
  "autoload": {
    "psr-4": { "Damax\\Common\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Damax\\Common\\Tests\\": "tests/" }
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "doctrine/inflector": "^1.3",
    "doctrine/orm": "^2.6",
    "enqueue/enqueue": "^0.8.29",
    "friendsofphp/php-cs-fixer": "^2.10",
    "matthiasnoback/symfony-dependency-injection-test": "^3.0",
    "pagerfanta/pagerfanta": "^2.0",
    "php-coveralls/php-coveralls": "^2.1",
    "ramsey/uuid": "^3.7",
    "sensio/framework-extra-bundle": "^5.1",
    "simple-bus/message-bus": "^3.0",
    "symfony/console": "^4.0",
    "symfony/framework-bundle": "^4.1",
    "symfony/phpunit-bridge": "^4.0",
    "symfony/serializer": "^4.0",
    "symfony/validator": "^4.0",
    "symfony/web-link": "^4.1",
    "twig/twig": "^2.4"
  },
  "scripts": {
    "cs": "php-cs-fixer fix",
    "test": "simple-phpunit",
    "test-cc": "./bin/phpunit-coverage",
    "test-ci": "simple-phpunit --coverage-clover=build/logs/clover.xml",
    "test-publish": "php-coveralls"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.3-dev"
    }
  }
}
